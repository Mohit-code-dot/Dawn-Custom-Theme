  var slider = $(".slick");
slider
  .slick({
    dots: true,
    vertical: true,
    verticalSwiping: true,
    slidesToShow: 1,
    slidesToScroll: 1,
    dots: true,
    arrows: false,
    autoplay: true
  });

slider.on('wheel', (function(e) {
  e.preventDefault();

  if (e.originalEvent.deltaY < 0) {
    $(this).slick('slickNext');
  } else {
    $(this).slick('slickPrev');
  }
}));

  let button = document.querySelectorAll(".slick-dots button");
  for (let i = 0; i <= button.length; i++) {
    button[i].innerHTML = "";
  }
</script>

