         #FeaturedWrapper .carousel{
          display: grid;
          grid-auto-flow: column;
          grid-auto-columns: calc(100% / {{section.settings.columShow}});
          overflow-x: auto;
          scroll-snap-type: x mandatory;
          gap: 10px;
          border-radius: 0px;
          scroll-behavior: smooth;
          scrollbar-width: none;
