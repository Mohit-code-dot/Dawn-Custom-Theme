                {% render 'card-product',
                  card_product: product,
                  media_aspect_ratio: section.settings.imageRatio,
                  show_secondary_image: section.settings.Secondimg,
                  show_vendor: section.settings.showVendor,
                  show_rating: section.settings.showRating
