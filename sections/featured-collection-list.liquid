        #FeaturedWrapper .carousel::-webkit-scrollbar {
          display: none;
        }
        #FeaturedWrapper .carousel.no-transition {
          scroll-behavior: auto;
        }
        #FeaturedWrapper .carousel.dragging {
          scroll-snap-type: none;
          scroll-behavior: auto;
        }
        #FeaturedWrapper .carousel.dragging .card {
          cursor: grab;
          user-select: none;
        }
        #FeaturedWrapper .carousel .card {
