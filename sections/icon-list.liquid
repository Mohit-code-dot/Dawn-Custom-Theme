          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/no-gmo.png?v=1713449654" />
          {% endif %}
          {% endif %}
        </div>
        <div id="icon-list-text" style="text-align:center;">{{ block.settings.icon-list-text }}</div>
      </div>
    {% endfor %}
  </div>
</section>
