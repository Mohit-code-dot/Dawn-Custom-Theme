<style>

  #icon-list-wrapper{
    display:flex;
    justify-content:center;
    align-items:center;
    flex-wrap:wrap;
    background:{{section.settings.icon-list-bg-color}};
  }
  #icon-list-icons img{
    width:{{section.settings.icon-size}}px;
    height:{{section.settings.icon-size}}px;
  }
  #icon-list{
    display:flex;
    justify-content:flex-start;
    align-items:center;
    flex-direction:column;
    min-height:200px;
  }
</style>
<section>
    <h2 style="text-align:center;">{{ section.settings.icon-list-title }}</h2>
  <div id="icon-list-wrapper">
    {% for block in section.blocks %}
      <div id="icon-list">
      <div id="icon-list-icons" style="padding:2rem;">
        {% if block.settings.icon-list-custom-image != blank %}
        <img src="{{ block.settings.icon-list-custom-image | img_url:'master' }}"/>
        {% endif %}
        {% if block.settings.icon-list-custom-image == blank %}
        {% if block.settings.icon-list-icons == 'globe' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/globe.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'airplane' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/airplane.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'tumble-dry' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/tumble-dry.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'location' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/location.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'user' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/user.png?v=1713444204" />
          {% elsif block.settings.icon-list-icons == 'leather' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/leather.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'trousers' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/trousers.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'like' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/like.png?v=1713444204" />
          {% elsif block.settings.icon-list-icons == 'leaves' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/leaves.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'iron' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/iron.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'box' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/box.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'heart' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/heart.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'chat' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/chat.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'check-mark' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/check-mark.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'eye_1' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/eye_1.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'padlock' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/padlock.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'question' %}
