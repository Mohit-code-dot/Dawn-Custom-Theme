          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/coat-hanger-thin-outline.png?v=1713444203" />
          {% elsif block.settings.icon-list-icons == 'oil-free' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/oil-free.png?v=1713449654" />
          {% elsif block.settings.icon-list-icons == 'free_4' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/free_4.png?v=1713449654" />
          {% elsif block.settings.icon-list-icons == 'label' %}
          <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/label.png?v=1713449654" />
