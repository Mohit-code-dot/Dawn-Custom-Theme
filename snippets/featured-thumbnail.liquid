<style>
   .thumbnailcontainer .flickity-enabled {
     position: relative;
   }

   .thumbnailcontainer .flickity-enabled:focus { outline: none; }

   .thumbnailcontainer .flickity-viewport {
     overflow: hidden;
     position: relative;
     height: 100%;
   }

   .thumbnailcontainer .flickity-slider {
     position: absolute;
     width: 100%;
     height: 100%;
   }
    .thumbnailcontainer .carousal-main .is-selected{
     display:flex!important;
   }

   /* draggable */

   .thumbnailcontainer .flickity-enabled.is-draggable {
     -webkit-tap-highlight-color: transparent;
             tap-highlight-color: transparent;
     -webkit-user-select: none;
        -moz-user-select: none;
         -ms-user-select: none;
             user-select: none;
   }

   .thumbnailcontainer .flickity-enabled.is-draggable .flickity-viewport {
     cursor: move;
     cursor: -webkit-grab;
     cursor: grab;
   }

   .thumbnailcontainer .flickity-enabled.is-draggable .flickity-viewport.is-pointer-down {
     cursor: -webkit-grabbing;
     cursor: grabbing;
   }

   /* ---- previous/next buttons ---- */

   .thumbnailcontainer .flickity-prev-next-button {
     position: absolute;
     top: 50%;
     width: 44px;
     height: 44px;
     border: none;
     border-radius: 50%;
     background: white;
     background: hsla(0, 0%, 100%, 0.75);
     cursor: pointer;
     /* vertically center */
     transform: translateY(-50%);
   }

   .thumbnailcontainer .flickity-prev-next-button:hover { background: white; }

   .thumbnailcontainer .flickity-prev-next-button:focus {
     outline: none;
     box-shadow: 0 0 0 5px #09F;
   }

   .thumbnailcontainer  .flickity-prev-next-button:active {
     opacity: 0.6;
   }

   .thumbnailcontainer .flickity-prev-next-button.previous { left: 10px; }
   .thumbnailcontainer .flickity-prev-next-button.next { right: 10px; }


   .thumbnailcontainer .flickity-prev-next-button:disabled {
     opacity: 0.3;
     cursor: auto;
   }

   .thumbnailcontainer .flickity-prev-next-button svg {
     position: absolute;
     left: 20%;
     top: 20%;
     width: 60%;
     height: 60%;
   }

   .thumbnailcontainer .flickity-prev-next-button .arrow {
     fill: #333;
   }

   .thumbnailcontainer .carousal-cell {
     width: 100%;
     height: 504px;
     margin-right: 8px;
     border-radius: 5px;
     counter-increment: carousal-cell;
     display:none;
     justify-content:center;
     align-items:center;
   }

   /* .carousal-nav .flickity-slider{
     left:140px!important;
   } */
  .thumbnailcontainer .carousal-main .flickity-viewport {
     height: 390px!important;
   }
  @media(max-width:767px){
    .thumbnailcontainer .carousal-cell img{
      width:300px;
      height:300px;
    }
  }
</style>

<div class="thumbnailcontainer">
  <!-- Flickity HTML init -->
  <div class="carousal carousal-main" data-flickity='{"pageDots": false }'>
    {% for image in product.images %}
      <div class="carousal-cell">
        {% if image != blank %}
        <img src="{{ image | img_url:'master'}}" width="80%" height="80%">
        {% elsif image == blank %}
        <img src="https://cdn.shopify.com/s/files/1/0615/5095/2653/files/placeholder-images-collection-1_large_af129419-bbb1-4281-a220-740f7f1bc5d0.webp?v=1717152378" width="80%" height="80%">
          {% endif %}
      </div>
    {% endfor %}
  </div>
</div>
<!-- /.container -->
<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
